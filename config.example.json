{
  "$schema": "./config.schema.json",
  "version": "1.0.0",
  "created": "2026-01-23T00:00:00Z",

  "_comment": "Copy this file to config.json and customize for your setup",

  "user": {
    "name": "Your Name",
    "email": "you@example.com",
    "timezone": "UTC",
    "avatar": null,
    "preferences": {
      "theme": "dark",
      "language": "TypeScript",
      "defaultFramework": "Next.js",
      "defaultStyling": "Tailwind",
      "defaultStateManagement": "Zustand"
    }
  },

  "paths": {
    "projects": "~/Documents/Projects",
    "dataFolder": "~/.taskboard",
    "screenshotsFolder": "assets"
  },

  "workflow": {
    "_comment": "Customize project stages and phases",
    "phases": [
      {
        "id": "design",
        "name": "Design",
        "color": "#8b5cf6",
        "stages": ["conception", "discovery", "requirements"]
      },
      {
        "id": "engineering",
        "name": "Engineering",
        "color": "#3b82f6",
        "stages": ["architecture", "qa-planning", "review"]
      },
      {
        "id": "build",
        "name": "Build",
        "color": "#22c55e",
        "stages": ["development", "testing", "staging"]
      },
      {
        "id": "launch",
        "name": "Launch",
        "color": "#f59e0b",
        "stages": ["ship", "announce", "walkthrough"]
      },
      {
        "id": "closure",
        "name": "Closure",
        "color": "#6b7280",
        "stages": ["documentation", "portfolio", "retrospective"]
      }
    ],
    "priorities": [
      { "id": "P0", "name": "Critical", "color": "#ef4444" },
      { "id": "P1", "name": "High", "color": "#f97316" },
      { "id": "P2", "name": "Medium", "color": "#eab308" },
      { "id": "P3", "name": "Low", "color": "#6b7280" }
    ],
    "complexities": [
      { "id": "XS", "name": "Extra Small", "hours": "< 2h" },
      { "id": "S", "name": "Small", "hours": "2-4h" },
      { "id": "M", "name": "Medium", "hours": "4-8h" },
      { "id": "L", "name": "Large", "hours": "1-2 days" },
      { "id": "XL", "name": "Extra Large", "hours": "2+ days" }
    ]
  },

  "documents": {
    "_comment": "Default document structure for new projects",
    "categories": [
      {
        "id": "design",
        "name": "Design",
        "icon": "ðŸ“",
        "defaultFiles": ["APP_PRD.md", "DESIGN.md"]
      },
      {
        "id": "engineering",
        "name": "Engineering",
        "icon": "âš™ï¸",
        "defaultFiles": ["ARCHITECTURE.md", "DEVELOPMENT-PLAN.md", "TEST-PLAN.csv"]
      },
      {
        "id": "build",
        "name": "Build",
        "icon": "ðŸ”¨",
        "defaultFiles": ["DEV-CLOCK.md", "PROJECT-STATUS.md", "CHANGELOG.md"]
      },
      {
        "id": "launch",
        "name": "Launch",
        "icon": "ðŸš€",
        "defaultFiles": ["PLAY_STORE_LISTING.md", "LINKEDIN-POST.md", "PRIVACY_POLICY.md"]
      },
      {
        "id": "other",
        "name": "Other",
        "icon": "ðŸ“Ž",
        "defaultFiles": ["GLOSSARY.md"]
      }
    ],
    "approvalMandatory": {
      "_comment": "Documents that require explicit approval before proceeding",
      "beforeEngineering": ["APP_PRD.md"],
      "beforeBuild": ["ARCHITECTURE.md"],
      "beforeLaunch": ["TEST-PLAN.csv"]
    }
  },

  "agents": {
    "_comment": "AI agent prompt templates for automation",
    "enabled": true,
    "templates": {
      "orchestrator": "agents/orchestrator.md",
      "design": "agents/design-agent.md",
      "architect": "agents/architect-agent.md",
      "dev": "agents/dev-agent.md",
      "git": "agents/git-agent.md",
      "qa": "agents/qa-agent.md",
      "docs": "agents/docs-agent.md",
      "readme": "agents/readme-agent.md"
    }
  },

  "integrations": {
    "groq": {
      "_comment": "Get your API key from https://console.groq.com/keys",
      "enabled": true,
      "apiKey": "YOUR_GROQ_API_KEY_HERE",
      "model": "whisper-large-v3-turbo",
      "useFor": ["voiceTranscription"]
    },
    "github": {
      "enabled": false,
      "username": null,
      "defaultVisibility": "private"
    },
    "jira": {
      "enabled": false,
      "url": null,
      "email": null,
      "apiToken": null,
      "defaultProject": null
    }
  },

  "notifications": {
    "enabled": true,
    "desktop": true,
    "sound": false,
    "reminders": {
      "staleProject": 7,
      "approvalPending": 1,
      "blockedTask": 1
    }
  },

  "ui": {
    "theme": "dark",
    "accentColor": "#6366f1",
    "compactMode": false,
    "showWelcome": true,
    "defaultView": "pipeline",
    "cardSize": "medium"
  },

  "advanced": {
    "logActions": true,
    "fileWatchDebounce": 500,
    "autoSaveInterval": 30000,
    "maxRecentProjects": 10,
    "backupEnabled": true,
    "backupInterval": 86400000
  }
}
